    link: "https://github.com/Andersonsiu/Sistema-Casa-de-Cambio",
    github: "https://github.com/Andersonsiu/Sistema-Casa-de-Cambio",
    image: "/projects/casa-cambio.jpeg",  // Cambia la ruta de la imagen si es necesario
