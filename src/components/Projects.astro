    class: "bg-[#00758F] text-white",
  },
  FLASK: {
    name: "Flask",
    class: "bg-[#000000] text-white",
  },
  MONGODB: {
    name: "MongoDB",
    class: "bg-[#47A248] text-white",
  },
  ARDUINO: {
