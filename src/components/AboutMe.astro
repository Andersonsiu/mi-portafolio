        <span class="icon w-8 h-8 text-yellow-500 dark:text-yellow-300"></span>
        <h2 class="ml-3 text-3xl font-bold tracking-tight text-gray-800 sm:text-4xl dark:text-white title"></h2>
      </div>
      <ul class="pl-8 mt-4 space-y-3 list-disc text-lg content"></ul>
    </div>
  </template>

  <!-- Formación Complementaria -->
  <div class="section">
